<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".oneSongPlay">

    <ImageView
        android:id="@+id/mediaImage"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_baseline_music_note_24"
        android:visibility="visible" />


    <TextView
        android:id="@+id/name"
        android:text="cfhghg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/amaranth"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"

        />

    <TextView
        android:text="Artist"
        android:id="@+id/artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/amaranth"
        android:textAlignment="center"
        android:textColor="#800B0B"
        android:textSize="15sp"

        />


    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:progressTint="@color/purple_500"
        android:thumbTint="@color/purple_700"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/startTim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/amaranth"
            android:text="00:00" />

        <TextView
            android:id="@+id/endTim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="19dp"
            android:fontFamily="@font/amaranth"
            android:text="TextView" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="1dp">


        <Button
            android:id="@+id/prev"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="12dp"

            android:background="@drawable/ic_baseline_skip_previous_24" />

        <Button
            android:id="@+id/stop1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_baseline_stop_circle_24" />

        <Button
            android:id="@+id/play1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="16dp"


            android:background="@drawable/ic_baseline_play_circle_filled_24" />

        <Button
            android:id="@+id/next"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_baseline_skip_next_24" />

        <ImageButton
            android:id="@+id/btn_fav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="#fff"
            app:srcCompat="@drawable/ic_baseline_favorite_border_24" />


    </LinearLayout>

    <Button
        android:id="@+id/lyric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Lyrics" />


</LinearLayout>